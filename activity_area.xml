<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:background="?attr/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Area">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:autofillHints=""
                android:ems="10"
                android:background="@drawable/custom_input"
                app:drawableRightCompat="@drawable/ic_pen"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/select"
                android:maxLength="20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/selector_1" />

            <Spinner
                android:id="@+id/selector_1"
                android:layout_width="@dimen/spinner"
                android:layout_height="@dimen/icon"
                android:entries="@array/spinner_area_items"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_input"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_input"
                app:layout_constraintTop_toTopOf="parent" />


            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toBottomOf="@id/selector_1"
                android:layout_marginStart="10dp">

                <TableRow
                    android:id="@+id/row_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/items1"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/acre"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_2"
                    android:layout_width="0dp"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/items2"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/hectare"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        android:textColor="?attr/tableRowTextColor2"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items3"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/square_centimeter"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_4"
                    android:layout_width="0dp"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items4"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/square_decimeters"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/items5"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/square_foot"
                        android:textColor="?attr/tableRowTextColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/items6"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/square_inch"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items7"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/square_kilometer"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/items8"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/square_meter"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/items9"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/square_mile"
                        android:textColor="?attr/tableRowTextColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items10"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/square_millimeter"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items11"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/square_yard"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>