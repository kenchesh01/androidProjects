<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/app_message_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/app_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/app_message"
                android:textColor="@android:color/black"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/app_title" />

            <ImageView
                android:id="@+id/menu_profitability"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:contentDescription="@string/menu_profitability"
                android:gravity="center"
                android:onClick="send_profitability"
                ads:layout_constraintEnd_toStartOf="@+id/menu_liquidity"
                ads:layout_constraintHorizontal_chainStyle="spread_inside"
                ads:layout_constraintStart_toStartOf="@id/app_message"
                ads:layout_constraintTop_toBottomOf="@id/app_message"
                app:srcCompat="@mipmap/ic_menu_profitability"
                />

            <ImageView
                android:id="@+id/menu_liquidity"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/menu_liquidity"
                android:gravity="center"
                android:onClick="send_liquidity"
                ads:layout_constraintEnd_toStartOf="@id/menu_efficiency"
                ads:layout_constraintStart_toEndOf="@+id/menu_profitability"
                ads:layout_constraintTop_toBottomOf="@id/app_message"
                app:srcCompat="@mipmap/ic_menu_liquidity" />

            <ImageView
                android:id="@+id/menu_efficiency"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/menu_efficiency"
                android:onClick="send_efficiency"
                ads:layout_constrainedWidth="false"
                ads:layout_constraintEnd_toEndOf="@id/app_message"
                ads:layout_constraintStart_toEndOf="@+id/menu_liquidity"
                ads:layout_constraintTop_toBottomOf="@id/app_message"
                app:srcCompat="@mipmap/ic_menu_efficiency" />

            <TextView
                android:id="@+id/label_profitability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="send_profitability"
                android:text="@string/label_profitability"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@+id/menu_profitability"
                ads:layout_constraintStart_toStartOf="@id/menu_profitability"
                ads:layout_constraintTop_toBottomOf="@id/menu_profitability" />

            <TextView
                android:id="@+id/label_liquidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="send_liquidity"
                android:text="@string/label_liquidity"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@+id/menu_liquidity"
                ads:layout_constraintStart_toStartOf="@id/menu_liquidity"
                ads:layout_constraintTop_toBottomOf="@id/menu_liquidity" />

            <TextView
                android:id="@+id/label_efficiency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:onClick="send_efficiency"
                android:text="@string/label_efficiency"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@+id/menu_efficiency"
                ads:layout_constraintStart_toStartOf="@id/menu_efficiency"
                ads:layout_constraintTop_toBottomOf="@id/menu_efficiency" />

            <ImageView
                android:id="@+id/menu_leverage"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/menu_leverage"
                android:gravity="center"
                android:onClick="send_leverage"
                ads:layout_constraintEnd_toEndOf="@id/label_profitability"
                ads:layout_constraintStart_toStartOf="@+id/app_message"
                ads:layout_constraintTop_toBottomOf="@id/label_profitability"

                app:srcCompat="@mipmap/ic_menu_leverage" />

            <ImageView
                android:id="@+id/menu_market"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:contentDescription="@string/menu_liquidity"
                android:gravity="center"
                android:onClick="send_market"
                ads:layout_constraintTop_toTopOf="@id/menu_leverage"
                app:layout_constraintEnd_toEndOf="@id/label_liquidity"
                app:layout_constraintStart_toStartOf="@id/label_liquidity"
                app:srcCompat="@mipmap/ic_menu_market" />


            <TextView
                android:id="@+id/label_leverage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/label_leverage"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/quote"
                android:onClick="send_leverage"
                ads:layout_constraintStart_toStartOf="@id/menu_leverage"
                ads:layout_constraintEnd_toEndOf="@+id/menu_leverage"
                ads:layout_constraintTop_toBottomOf="@id/menu_leverage" />

            <TextView
                android:id="@+id/label_market"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/label_market"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/quote"
                android:onClick="send_market"
                ads:layout_constraintStart_toStartOf="@id/menu_market"
                ads:layout_constraintEnd_toEndOf="@+id/menu_market"
                ads:layout_constraintTop_toBottomOf="@id/menu_market"  />


            <TextView
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/label_leverage"  />


            <TextView
                android:id="@+id/profitability_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:gravity="start|top"
                android:text="@string/menu_profitability"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                android:onClick="send_profitability"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/profitability_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#e7e7e7"
                android:gravity="start|top"
                android:text="@string/profitability_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/profitability_heading" />

            <TextView
                android:id="@+id/liquidity_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:gravity="start|top"
                android:text="@string/menu_liquidity"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                android:onClick="send_liquidity"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/profitability_description" />

            <TextView
                android:id="@+id/liquidity_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#e7e7e7"
                android:gravity="start|top"
                android:text="@string/liquidity_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/liquidity_heading" />

            <TextView
                android:id="@+id/efficiency_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:gravity="start|top"
                android:text="@string/menu_efficiency"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                android:onClick="send_efficiency"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/liquidity_description" />

            <TextView
                android:id="@+id/efficiency_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#e7e7e7"
                android:gravity="start|top"
                android:text="@string/efficiency_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/efficiency_heading" />

            <TextView
                android:id="@+id/leverage_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:gravity="start|top"
                android:text="@string/menu_leverage"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                android:onClick="send_leverage"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/efficiency_description" />

            <TextView
                android:id="@+id/leverage_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#e7e7e7"
                android:gravity="start|top"
                android:text="@string/leverage_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/leverage_heading" />

            <TextView
                android:id="@+id/market_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:gravity="start|top"
                android:text="@string/menu_market"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                android:onClick="send_market"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/leverage_description" />

            <TextView
                android:id="@+id/market_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#e7e7e7"
                android:gravity="start|top"
                android:text="@string/market_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/market_heading" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/market_description" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".10" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".90" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>