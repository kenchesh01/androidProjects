<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Temperature">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:autofillHints=""
                android:ems="10"
                android:background="@drawable/custom_input"
                app:drawableRightCompat="@drawable/ic_pen"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:hint="@string/select"
                android:maxLength="20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/selector_1" />

            <Spinner
                android:id="@+id/selector_1"
                android:layout_width="@dimen/spinner"
                android:layout_height="@dimen/icon"
                android:entries="@array/spinner_temperature_items"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_input"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_input"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toBottomOf="@id/selector_1"
                android:layout_marginStart="10dp">

                <TableRow
                    android:id="@+id/row_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items1"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/celsius_c"
                        android:textColor="@color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Result_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="@color/black"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_2"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/items2"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:text="@string/fahrenheit_f"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:textColor="@color/black"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/Result_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:layout_weight="4"
                        android:textColor="@color/black"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/items3"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/kelvin_k"
                        android:textColor="@color/black"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Result_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:textColor="@color/black"
                        android:layout_weight="4"
                        />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/activity_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body"
                android:gravity="center"
                android:text="@string/your_local_weather"
                android:textColor="@color/black"
                android:textSize="@dimen/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/table"               />
<TextView
    android:id="@+id/location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:text="Location"
    android:textSize="@dimen/title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/mCalsius"
    app:layout_constraintTop_toBottomOf="@id/activity_label"/>
            <TextView
                android:id="@+id/mCalsius"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="0*C"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/body"
                app:layout_constraintStart_toEndOf="@+id/location"
                app:layout_constraintEnd_toStartOf="@+id/eBar"
                app:layout_constraintTop_toBottomOf="@+id/activity_label"
              />
            <TextView
                android:id="@+id/eBar"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/mCalsius"
                app:layout_constraintEnd_toStartOf="@+id/mFahrenheit"
                app:layout_constraintTop_toBottomOf="@+id/activity_label"
                />
            <TextView
                android:id="@+id/mFahrenheit"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0*F"
                android:textColor="@color/black"
                android:textSize="@dimen/body"
                app:layout_constraintStart_toEndOf="@+id/eBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_label"
                />

            <TextView
                android:id="@+id/mWeather"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/body"
                android:text="-----"
                app:layout_constraintStart_toEndOf="@+id/location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mCalsius"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>