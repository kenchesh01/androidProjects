<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/main_content"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_message_title"
                android:textColor="@color/pink"
                android:textSize="@dimen/heading"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/app_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/app_message"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toEndOf="@id/guideline_app_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_app_start"
                ads:layout_constraintTop_toBottomOf="@id/app_title" />

            <ImageView
                android:id="@+id/GameAddition"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/pink"
                android:contentDescription="@string/activity_addition"
                android:gravity="center"
                ads:layout_constraintEnd_toStartOf="@id/GameSubtraction"
                ads:layout_constraintTop_toBottomOf="@id/app_message"
                ads:srcCompat="@drawable/ic_menu_addition"
                app:layout_constraintStart_toStartOf="@id/guideline_start" />

            <ImageView
                android:id="@+id/GameSubtraction"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/holo_purple"
                android:contentDescription="@string/activity_subtraction"
                android:gravity="center"
                ads:layout_constraintStart_toEndOf="@id/GameAddition"
                ads:layout_constraintTop_toBottomOf="@id/app_message"
                ads:srcCompat="@drawable/ic_menu_subtraction"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <ImageView
                android:id="@+id/GameMultiple"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_orange_dark"
                android:contentDescription="@string/activity_multiplication"
                android:gravity="center"
                ads:layout_constraintEnd_toStartOf="@id/GameDivision"
                ads:layout_constraintTop_toBottomOf="@id/GameAddition"
                ads:srcCompat="@drawable/ic_menu_multiplication"
                app:layout_constraintStart_toStartOf="@id/guideline_start" />

            <ImageView
                android:id="@+id/GameDivision"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/design_default_color_secondary_variant"
                android:contentDescription="@string/activity_division"
                android:gravity="center"
                ads:layout_constraintStart_toEndOf="@id/GameMultiple"
                ads:layout_constraintTop_toBottomOf="@id/GameSubtraction"
                ads:srcCompat="@drawable/ic_menu_division"
                app:layout_constraintEnd_toEndOf="@id/guideline_end" />

            <TextView
                android:id="@+id/label_facts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start|top"
                android:text="@string/label_facts"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                ads:layout_constraintEnd_toEndOf="@id/guideline_app_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_app_start"
                ads:layout_constraintTop_toBottomOf="@id/GameMultiple" />

            <TextView
                android:id="@+id/math_facts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start|top"
                android:text="@string/math_facts"
                android:textColor="@color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintEnd_toEndOf="@id/guideline_app_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_app_start"
                ads:layout_constraintTop_toBottomOf="@id/label_facts" />

            <TextView
                android:id="@+id/label_solve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start|top"
                android:text="@string/label_solve"
                android:textColor="@color/dark_orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                ads:layout_constraintEnd_toEndOf="@id/guideline_app_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_app_start"
                ads:layout_constraintTop_toBottomOf="@id/math_facts" />

            <TextView
                android:id="@+id/problem_solving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="start|top"
                android:text="@string/problem_solving"
                android:textColor="@color/black"
                android:textSize="@dimen/quote"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintEnd_toEndOf="@id/guideline_app_end"
                ads:layout_constraintStart_toStartOf="@id/guideline_app_start"
                ads:layout_constraintTop_toBottomOf="@id/label_solve" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="40dp"
                ads:layout_constraintGuide_percent=".20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="40dp"
                ads:layout_constraintGuide_percent=".80" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_app_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".10" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_app_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".90" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>