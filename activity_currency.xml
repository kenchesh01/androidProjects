<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".Currency">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/convertFromTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/convert_from"
                android:textColor="?attr/text_color"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="@+id/convertToTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/convertToTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/convert_to"
                android:textColor="?attr/text_color"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@+id/convertFromTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <Spinner
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/convert_from_dropdown_menu"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/convert_to_dropdown_menu"
                app:layout_constraintTop_toBottomOf="@+id/convertFromTitle"
                />
            <Spinner
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/convert_to_dropdown_menu"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                
                app:drawableRightCompat="@drawable/ic_drop_down"
                android:background="@drawable/custom_input"
                app:layout_constraintStart_toEndOf="@+id/convert_from_dropdown_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/convertToTitle"
                />

            <TextView
                android:id="@+id/amountToConvertTextValue"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ConvertResultText"
                app:layout_constraintTop_toBottomOf="@id/convert_from_dropdown_menu"
                android:layout_marginTop="35dp"
                android:text="@string/amount_to_convert"
                android:textSize="14sp"
                android:textColor="?attr/text_color"
                />
            <TextView
                android:id="@+id/ConvertResultText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/amountToConvertTextValue"
                app:layout_constraintTop_toBottomOf="@id/convert_from_dropdown_menu"
                android:layout_marginTop="35dp"
                android:text="@string/conversion_rate"
                android:textSize="14sp"
                android:textColor="?attr/text_color"
                />

            <EditText
                android:id="@+id/amountConvertEditText"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:hint="@string/enter_amount"
                android:background="@drawable/custom_input"
                app:drawableRightCompat="@drawable/ic_pen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/conversionResult"
                app:layout_constraintTop_toBottomOf="@+id/amountToConvertTextValue"
                android:autofillHints="" />
            <TextView
                android:id="@+id/conversionResult"
                android:layout_width="180dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="?attr/text_color"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConvertResultText"
                app:layout_constraintStart_toEndOf="@+id/amountToConvertTextValue"/>
            <TextView
                android:id="@+id/conversionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/major_currencies"
                android:textColor="?attr/text_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/conversionResult"
                />
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toBottomOf="@id/conversionButton"
                android:layout_marginStart="10dp">

                <TableRow
                    android:id="@+id/row_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:id="@+id/row1Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_eur" />
                    <TextView
                        android:id="@+id/items1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/usd_eur"
                        android:gravity="center"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row1Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/euro"
                        android:contentDescription="@string/usd_eur" />
                    <TextView
                        android:id="@+id/Result_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_2"
                    android:layout_width="0dp"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:id="@+id/row2Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_jpy" />
                    <TextView
                        android:id="@+id/items2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_jpy"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row2Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/japan"
                        android:contentDescription="@string/usd_jpy" />
                    <TextView
                        android:id="@+id/Result_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:textColor="?attr/tableRowTextColor2"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row3Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_gbp" />
                    <TextView
                        android:id="@+id/items3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/usd_gbp"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/row3Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/gbp"
                        android:contentDescription="@string/usd_gbp" />
                    <TextView
                        android:id="@+id/Result_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_4"
                    android:layout_width="0dp"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row4Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_cad" />
                    <TextView
                        android:id="@+id/items4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/usd_cad"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/row4Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/canada"
                        android:contentDescription="@string/usd_cad" />
                    <TextView
                        android:id="@+id/Result_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row5Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_cny" />

                    <TextView
                        android:id="@+id/items5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/usd_cny"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/row5Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/china_cny"
                        android:contentDescription="@string/usd_cny" />

                    <TextView
                        android:id="@+id/Result_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row6Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_aud" />
                    <TextView
                        android:id="@+id/items6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_aud"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row6Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/australia"
                        android:contentDescription="@string/usd_aud" />
                    <TextView
                        android:id="@+id/Result_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row7Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_hkd" />
                    <TextView
                        android:id="@+id/items7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/usd_hkd"
                        android:textColor="?attr/tableRowTextColor"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/row7Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/hongkong_hkd"
                        android:contentDescription="@string/usd_hkd" />
                    <TextView
                        android:id="@+id/Result_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row8Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_inr" />

                    <TextView
                        android:id="@+id/items8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_inr"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row8Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/india"
                        android:contentDescription="@string/usd_inr" />
                    <TextView
                        android:id="@+id/Result_8"
                        android:layout_width="@dimen/icon"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor1"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row9Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_rub" />
                    <TextView
                        android:id="@+id/items9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_rub"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row9Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/rub_russia"
                        android:contentDescription="@string/usd_rub" />
                    <TextView
                        android:id="@+id/Result_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor"
                        android:layout_weight="4"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/row_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/tableRowBackgroundColor2"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/row10Image1"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/usd"
                        android:contentDescription="@string/usd_krw" />
                    <TextView
                        android:id="@+id/items10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/usd_krw"
                        android:gravity="center"
                        android:textColor="?attr/tableRowTextColor2"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"
                        android:layout_weight="2"
                        />
                    <ImageView
                        android:id="@+id/row10Image2"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/south_korea_krw"
                        android:contentDescription="@string/usd_krw" />
                    <TextView
                        android:id="@+id/Result_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/body"
                        android:textColor="?attr/tableRowTextColor2"
                        android:layout_weight="4"
                        />
                </TableRow>


            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>